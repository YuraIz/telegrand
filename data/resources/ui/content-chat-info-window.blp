using Gtk 4.0;
using Adw 1;

template ContentChatInfoWindow : Adw.Window {
  styles ["chat-info"]

  default-width: 360;
  modal: true;

  content: Adw.ToastOverlay toast_overlay {
    child: Box {
      orientation: vertical;

      HeaderBar {
        styles ["flat"]

        title-widget: Adw.WindowTitle {
          visible: false;
        };
      }

      Adw.Clamp {
        child: Box {
          styles ["main-page"]

          orientation: vertical;

          .ComponentsAvatar {
            size: 128;
            item: bind ContentChatInfoWindow.chat;
          }

          Label name_label {
            styles ["title-1"]

            wrap: true;
            justify: center;
          }

          Inscription subtitle_label {
            text-overflow: ellipsize_middle;
            xalign: 0.5;
          }

          ListBox info_list {
            styles ["boxed-list"]

            selection-mode: none;
          }
        };
      }
    };
  };
}
